<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_image"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/logoContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="177dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_logo"
            android:contentDescription="Logo" />

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="WELCOME BACK!"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:fontFamily="@font/irish_grover" />
    </LinearLayout>

    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/logoContainer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:background="@drawable/white_edittext"
        android:hint="Username"
        android:drawableStart="@drawable/ic_user"
        android:drawablePadding="50dp"
        android:textColor="#FF000000"
        android:textColorHint="#FF000000"
        android:fontFamily="@font/jaro"
        android:paddingStart="0dp"
        android:padding="0dp" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/usernameEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/white_edittext"
        android:hint="Password"
        android:drawableStart="@drawable/ic_lock"
        android:drawablePadding="50dp"
        android:inputType="textPassword"
        android:textColor="#FF000000"
        android:textColorHint="#FF000000"
        android:fontFamily="@font/jaro"
        android:paddingStart="0dp"
        android:padding="0dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwordEditText"
        android:layout_marginTop="8dp">

        <CheckBox
            android:id="@+id/rememberMeCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Remember me"
            android:textColor="#FFFFFFFF"
            android:fontFamily="@font/jaro" />

        <TextView
            android:id="@+id/forgotPasswordText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/passwordEditText"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="13dp"
            android:text="Forgot password"
            android:textColor="#FFFFFFFF"
            android:fontFamily="@font/jaro" />
    </RelativeLayout>

    <Button
        android:id="@+id/loginButton"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/passwordEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:backgroundTint="#FFD9D9D9"
        android:text="Login"
        android:textColor="#FF000000"
        android:fontFamily="@font/jaro"
        app:cornerRadius="5dp" />

    <Button
        android:id="@+id/changePasswordButton"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/createAccountText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FFD9D9D9"
        android:text="Promeni lozinku"
        android:textColor="#FF000000"
        android:fontFamily="@font/jaro"
        app:cornerRadius="5dp" />

    <TextView
        android:id="@+id/createAccountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="550dp"
        android:text="Create account"
        android:textSize="17sp"
        android:textColor="#FFFFFFFF"
        android:fontFamily="@font/jaro" />
</RelativeLayout>
